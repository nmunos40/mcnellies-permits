<link href='http://fonts.googleapis.com/css?family=Raleway:400,200' rel='stylesheet' type='text/css'>

<div class="container-login">
  <div class="row login_box">
      <div class="col-md-12 col-xs-12" align="center">
            <div class="line"><h3><%= Tenant.current.name%></h3></div>
            <div class="outter"><img src="<%= Tenant.current.logo %>" class="image-circle"/></div>   
            <h3>Permit Tracking Application</h3>
      </div>        
        <div class="col-md-12 col-xs-12 login_control">
                
          <%= form_tag sessions_path do %>

              <%= label_tag :email, nil, class: "label" %>
              <%= text_field_tag :email, params[:email], class: "form-control" %>

            <div class="field">
              <%= label_tag :password, nil, class: "label" %>
              <%= password_field_tag :password, "", class: "form-control" %>
            </div>
          </br>
                <div align="center">
                     <%= submit_tag "Log In", class: "btn btn-orange" %>
                </div>
          <% end %>
        </div>  
      
        <div class="col-xs-6 col-xs-6 follow line" align="center">
            <h5>
                 <%= link_to "Forgot Password?", root_path %> 
            </h5>
        </div>
        <div class="col-xs-6 col-xs-6 follow line" align="center">
            <h5>
                 <%= link_to "First Time Logging In?", root_path %> 
            </h5>
        </div>
    </div>
</div>
    



