<!DOCTYPE html>
<html>
  <head>
    <title><%= Tenant.current.name%> <%- if content_for?(:title) -%>&middot; <%= yield :title %><%- end -%></title>
    <% unless @disable_nav %>
    <%= stylesheet_link_tag "application" %>
    <% else %>
    <%= stylesheet_link_tag "login" %>
    <% end %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
  </head>
  <body <%= "id=#{@body_id}" if @body_id %> > 
    <% unless @disable_nav %>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to Tenant.current.name, root_path, class: "navbar-brand" %>
          </div>
          <%if current_user %>
            <ul class="nav navbar-nav">
              <li><%= link_to "Permit Dashboard", root_path %></li>
              <li><%= link_to "Employee Dashboard", site_employees_path %></li>
              <li><%= link_to "Manage Sites", sites_path %></li>
              </li>
            </ul>
            <div class="navbar-right">
              <p class="navbar-text">Logged in as <%= link_to current_user.username, user_path(current_user.id) %></p>
              <%= link_to "Log Out", logout_path, class: "btn btn-default btn-sm navbar-btn" %>
            </div>
          <% end %>
        </div>
      </nav>
    <% end %>
    <div class="container-fluid">
      <div class="row">
        <% if content_for?(:sidebar) %>
          <div class="area"></div><nav class="main-menu">
            <ul>

                <%= yield :sidebar %>
                <!--Page specific A tags go here. example:
                <a href="#">
                  <i class="fa fa-home fa-2x"></i>
                    <span class="nav-text">
                            Dashboard
                    </span>
                </a> -->
            </ul>
        </nav>
        <% end %>
        <div class="<%= content_for?(:sidebar) ? 'col-sm-10 col-sm-offset-1' : 'col-sm-12' %> main">
          <%= render partial: 'shared/flash_messages' %>
          <h1><%= yield :title %></h1>
          <%= yield %>
          <% unless @disable_nav %>
             <hr/>
            <footer>
              <p>&copy; Munos.INC <%= Time.now.year %></p>
            </footer>
          <% end %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag "application" %>
    <%= yield :javascripts %>
  </body>
</html>