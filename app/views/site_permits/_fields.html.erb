<%= render partial: 'shared/errors', locals: {object: f.object} %>

<div class="form-group">
	<%= f.label :site %>
	<%= f.collection_select :site_id, Site.all, :id, :name, {include_blank: 'Select a Company', selected: (params[:site_id].blank? ? (f.object.site_id.present? ? f.object.site.id : '') : params[:site_id])}, {class: "form-control"} %>
</div>

<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :description %>
	<%= f.text_field :description, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :expiration_date %> <br/>
	<%= f.text_field :expiration_date, :id => "site_perm_exp" %>
</div>

<div class="checkbox">
	<label><%= f.check_box :submitted %>Renewal Submitted?</label>
	<h6>*Checking this box will prevent email notifications.</h6>
</div>