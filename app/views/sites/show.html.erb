<%= content_for :sidebar do %>

  <li>
    <%= link_to edit_site_path(site: @site) do %>
        <i class="fa fa-pencil-square-o fa-2x"></i>
          <span class="nav-text">Edit Site</span>
    <% end %>
  </li>

    <li>
    <%= link_to new_site_permit_path(site_id: @site) do %>
        <i class="fa fa-plus-circle fa-2x"></i>
          <span class="nav-text">Create New Permit</span>
    <% end %>
  </li>

  <li>
    <%= link_to new_site_employee_path(site_id: @site) do %>
          <i class="fa fa fa-user-plus fa-2x"></i>
            <span class="nav-text">Add new Employee</span>
      <% end %>
  </li>


<% end %>

<div class="bs-callout bs-callout-success">
  <h4><%=link_to @site.name, edit_site_path(@site) %></h2>
    <strong>FEIN:</strong><span> <%=@site.fein_number%></span><br/>
  <strong>Address:</strong><span> <%=@site.street_address%></span>  
</div>

<hr/>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#employee" aria-controls="employee" role="tab" data-toggle="tab">Employees</a></li>
    <li role="presentation"><a href="#manager" aria-controls="manager" role="tab" data-toggle="tab">Managers</a></li>
    <li role="presentation"><a href="#permit" aria-controls="permit" role="tab" data-toggle="tab">Permits</a></li>
    <li role="presentation"><a href="#emplisc" aria-controls="emplisc" role="tab" data-toggle="tab">Employee Licenses</a></li>
    <li role="presentation"><a href="#emplearn" aria-controls="emplearn" role="tab" data-toggle="tab">Employee Training</a></li>
  </ul>


<!-- Nav Content -->
<div class="tab-content">

  <!-- Show all employees for the site -->
  <div role="tabpanel" class="tab-pane fade in active" id="employee">
      <hr/>
    <%= render partial: 'site_employees/employees_table', locals: {permits: @site_employees} %>
  </div>
  <!-- Show all of the manaers for the site -->
  <div role="tabpanel" class="tab-pane fade" id="manager">
      <hr/>
    <%= render partial: 'site_employees/employee_manager_table', locals: {permits: @site_managers} %>
  </div>

  <!-- Show all of the employee licenses for the site -->
  <div role="tabpanel" class="tab-pane fade" id="emplisc">
    <hr/>
    <%= render partial: 'employee_licenses/index_aged_employee_licenses'%>
  </div>
  <!-- Show all of the emlpoyee learning req. for the site -->
  <div role="tabpanel" class="tab-pane fade" id="emplearn">
    <hr/>
    <%= render partial: 'employee_trainings/index_aged_employee_trainings'%> 
  </div>
  <!-- Show all of the employee permits for the site -->
  <div role="tabpanel" class="tab-pane fade" id="permit">
    <hr/>
    <%= render partial: 'site_permits/permit_aged_table', locals: {permits: @site_permits} %>
  </div>
</div>


