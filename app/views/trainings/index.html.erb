<h1>Training Items (Learning)</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if @trainings.present? %>
      <% @trainings.each do |t| %>
        <tr>
        <td><%= t.course_name %></td>
        <td><%= link_to 'Edit', edit_training_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><td colspan="3">No Training Items to show.</td></tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Training Item', new_training_path %>
